<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    @*  Template Head Files  *@

    <meta charset="utf-8">
    <meta name="author" content="pixelhint.com">
    <meta name="description" content="Sublime Stunning free HTML5/CSS3 website template" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/mytemplate/")css/reset.css">
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/mytemplate/")css/fancybox-thumbs.css">
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/mytemplate/")css/fancybox-buttons.css">
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/mytemplate/")css/fancybox.css">
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/mytemplate/")css/animate.css">
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/mytemplate/")css/main.css">

    <script type="text/javascript" src="@Url.Content("~/Content/mytemplate/")js/jquery.js"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/mytemplate/")js/fancybox.js"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/mytemplate/")js/fancybox-buttons.js"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/mytemplate/")js/fancybox-media.js"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/mytemplate/")js/fancybox-thumbs.js"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/mytemplate/")js/wow.js"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/mytemplate/")js/main.js"></script>
    <script type="text/javascript" src="~/bundles/jqueryval"></script>

   

</head>
<body>
   
    <section class="billboard dark">
        <header class="wrapper dark">
            <nav>
                <ul>
                    
                    <li>@Html.ActionLink("Home", "Index", "Testimony")</li>
                
                    <li>@Html.ActionLink("Testimonials", "Index", "Testimony")</li>
                    <li>@Html.ActionLink("Questions", "Index", "Question")</li>
                    <li>@Html.ActionLink("About Us", "About", "Home")</li>
                   
                </ul>
            </nav>
        </header>

        <div class="caption dark animated wow fadeInDown clearfix">
            <h1> MEDTRAV</h1>
            <p> Discover Tunisia and return home healthier </p>
            <hr>
        </div>
        <div class="shadow"></div>
    </section><!--  End billboard  -->

    <div>
        @RenderBody()
      
       
    </div>

    <footer>
        <div class="wrapper">
            <div class="rights">
                <p>© Medtrav. All Rights Reserved 2014 - More Informations at <a href="https://www.facebook.com/MedTrav/?ref=hl" target="_blank"> Medtrav's facebook page</a></p>
            </div>

            <nav>
                <ul>
                    <li>@Html.ActionLink("About Us", "About", "Home")</li>
                    <li><a href="#">FAQ</a></li>
                    <li><a href="#">Services</a></li>
                    <li><a href="#">Blog</a></li>
                    <li><a href="#">Contact</a></li>
                </ul>
            </nav>
        </div>
    </footer><!--  End footer  -->


</body>
</html>
