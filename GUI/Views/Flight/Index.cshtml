<br />

    @using (Html.BeginForm("Index", "Flight", FormMethod.Get))
    {
        //the following are search options
        <b> Search Option: </b>
        <text>Departure location</text>
        @Html.TextBox("searchTextBoxDeparture")

        <text> Arrival location </text>
        @Html.TextBox("searchTextBoxArrival")


        <input type="submit" name="submit" value="Search" />
    }

    <br />
